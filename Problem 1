#include <stdio.h>

int main() {
    int n;
    int total = 0;

    printf("Enter a number (0 to stop): ");
    scanf("%d", &n);

    while (n != 0) {
        total += n; 
        printf("Current total: %d\n", total);
        printf("Enter a number (0 to stop): ");
        scanf("%d", &n);
    }

    printf("Final total: %d\n", total);
    return 0;
}
